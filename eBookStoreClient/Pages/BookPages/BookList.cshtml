@page
@model eBookStoreClient.Pages.BookPages.BookListModel

@{
    ViewData["Title"] = "BookList";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eStoreClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eStoreClient.styles.css" asp-append-version="true" />
</head>
<div style="width:inherit;display:flex;height:100%">
    <div class="col-lg-2" style="background:darkslateblue;display:inline-block;">
        <div>
            <div style="background-color:black">
                <h4 style="color:white;padding:1rem;text-align:left">BookStore</h4>
            </div>
            <div style="padding-left:1rem">
                <div style="padding-bottom:1rem"><a href="/Home" style="color:white;text-decoration: none">Home</a></div>
                <div style="padding-bottom:1rem">User</div>
                <div style="padding-bottom:1rem"><a href="/PublisherPages/PublisherList" style="color:white;text-decoration: none">Publisher</a></div>
                <div style="padding-bottom:1rem"><a href="/AuthorPages/AuthorList" style="color:white;text-decoration: none">Authors</a></div>
                <div style="padding-bottom:1rem"><a href="/BookPages/BookList" style="color:white;text-decoration: none">Books</a></div>
            </div>
        </div>
    </div>
    <div class="col-lg-9" style="display:inline-block;width:82.9%">
        <div>
            <div style="background-color:lightgray;padding:1rem;text-align:right">
                <a href="/Index" style="padding:1rem">Logout</a>
            </div>
            <div style="padding:1rem">
                <h1>BookList</h1>

                <p>
                    <a asp-page="/BookPages/CreateBook">Create New</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].Type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].Advance)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].Royalty)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].YtdSales)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].Notes)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].PublishedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book[0].PubId)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Book)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Advance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Royalty)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.YtdSales)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PublishedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PubId)
                                </td>
                                <td>
                                    <a asp-page="/BookPages/EditBook" asp-route-id="@item.BookId">Edit</a> |
                                    <a asp-page="/BookPages/DeleteBook" asp-route-id="@item.BookId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

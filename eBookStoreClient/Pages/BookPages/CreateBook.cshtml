@page
@model eBookStoreClient.Pages.BookPages.CreateBookModel

@{
    ViewData["Title"] = "CreateBook";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eStoreClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eStoreClient.styles.css" asp-append-version="true" />
</head>
<div style="width:inherit;display:flex;height:100%">
    <div class="col-lg-2" style="background-color:darkslateblue;display:inline-block;">
        <div>
            <div style="background-color:black">
                <h4 style="color:white;padding:1rem;text-align:left">BookStore</h4>
            </div>
            <div style="padding-left:1rem">
                <div style="padding-bottom:1rem"><a href="/Home" style="color:white;text-decoration: none">Home</a></div>
                <div style="padding-bottom:1rem">User</div>
                <div style="padding-bottom:1rem"><a href="/PublisherPages/PublisherList" style="color:white;text-decoration: none">Publisher</a></div>
                <div style="padding-bottom:1rem"><a href="/AuthorPages/AuthorList" style="color:white;text-decoration: none">Authors</a></div>
                <div style="padding-bottom:1rem"><a href="/BookPages/BookList" style="color:white;text-decoration: none">Books</a></div>
            </div>
        </div>
    </div>
    <div class="col-lg-9" style="display:inline-block;width:82.9%">
        <div>
            <div style="background-color:lightgray;padding:1rem;text-align:right">
                <a href="/Index" style="padding:1rem">Logout</a>
            </div>
            <div style="padding:1rem">
                <h1>CreateBook</h1>

                <h4>Book</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Book.Title" class="control-label"></label>
                                <input asp-for="Book.Title" class="form-control" />
                                <span asp-validation-for="Book.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Book.Type" class="control-label"></label>
                                <input asp-for="Book.Type" class="form-control" />
                                <span asp-validation-for="Book.Type" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Book.PubId" class="control-label"></label>
                                <select asp-for="Book.PubId" class="form-control" asp-items="ViewBag.PubId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Book.Price" class="control-label"></label>
                                <input asp-for="Book.Price" class="form-control" />
                                <span asp-validation-for="Book.Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Book.Advance" class="control-label"></label>
                                <input asp-for="Book.Advance" class="form-control" />
                                <span asp-validation-for="Book.Advance" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Book.Royalty" class="control-label"></label>
                                <input asp-for="Book.Royalty" class="form-control" />
                                <span asp-validation-for="Book.Royalty" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Book.YtdSales" class="control-label"></label>
                                <input asp-for="Book.YtdSales" class="form-control" />
                                <span asp-validation-for="Book.YtdSales" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Book.Notes" class="control-label"></label>
                                <input asp-for="Book.Notes" class="form-control" />
                                <span asp-validation-for="Book.Notes" class="text-danger"></span>
                            </div>
                            @*<div class="form-group">
                                <label asp-for="Book.PublishedDate" class="control-label"></label>
                                <input asp-for="Book.PublishedDate" class="form-control" />
                                <span asp-validation-for="Book.PublishedDate" class="text-danger"></span>
                            </div>*@
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-page="/BookPages/BookList">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

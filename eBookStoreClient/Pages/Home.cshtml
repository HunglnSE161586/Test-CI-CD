@page
@model eBookStoreClient.Pages.HomeModel
@{
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eStoreClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eStoreClient.styles.css" asp-append-version="true" />
</head>
<div style="width:inherit;display:flex;height:100%">
    <div class="col-lg-2" style="background-color:darkslateblue;display:inline-block;">
        <div>
            <div style="background-color:black">
                <h4 style="color:white;padding:1rem;text-align:left">BookStore</h4>
            </div>
            <div style="padding-left:1rem">
                <div style="padding-bottom:1rem"><a href="/Home" style="color:white;text-decoration: none">Home</a></div>
                <div style="padding-bottom:1rem">User</div>
                <div style="padding-bottom:1rem"><a href="/PublisherPages/PublisherList" style="color:white;text-decoration: none">Publisher</a></div>
                <div style="padding-bottom:1rem"><a href="/AuthorPages/AuthorList" style="color:white;text-decoration: none">Authors</a></div>
                <div style="padding-bottom:1rem"><a href="/BookPages/BookList" style="color:white;text-decoration: none">Books</a></div>
            </div>            
        </div>        
    </div>
    <div class="col-lg-9" style="display:inline-block;width:82.9%">
        <div>
            <div style="background-color:lightgray;padding:1rem;text-align:right">
                <a href="/Index" style="padding:1rem">Logout</a>
            </div>
            @if(Model.User!=null){
                <div style="padding:1rem">
                    <h1>Profile</h1>

                    <h4>User</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="User.UserId" />
                                <div class="form-group">
                                    <label asp-for="User.EmailAddress" class="control-label"></label>
                                    <input asp-for="User.EmailAddress" class="form-control" />
                                    <span asp-validation-for="User.EmailAddress" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="User.Password" class="control-label"></label>
                                    <input asp-for="User.Password" class="form-control" />
                                    <span asp-validation-for="User.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="User.Source" class="control-label"></label>
                                    <input asp-for="User.Source" class="form-control" />
                                    <span asp-validation-for="User.Source" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="User.FirstName" class="control-label"></label>
                                    <input asp-for="User.FirstName" class="form-control" />
                                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="User.MiddleName" class="control-label"></label>
                                    <input asp-for="User.MiddleName" class="form-control" />
                                    <span asp-validation-for="User.MiddleName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="User.LastName" class="control-label"></label>
                                    <input asp-for="User.LastName" class="form-control" />
                                    <span asp-validation-for="User.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    @*<label asp-for="User.RoleId" class="control-label"></label>
                                    <select asp-for="User.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                                    <span asp-validation-for="User.RoleId" class="text-danger"></span>*@
                                    <input asp-for="User.RoleId" class="form-control" type="hidden" />
                                </div>
                                <div class="form-group">
                                    @*<label asp-for="User.PubId" class="control-label"></label>
                                    <select asp-for="User.PubId" class="form-control" asp-items="ViewBag.PubId"></select>
                                    <span asp-validation-for="User.PubId" class="text-danger"></span>*@
                                    <input asp-for="User.PubId" class="form-control" type="hidden" />
                                </div>
                                <div class="form-group">
                                    @*<label asp-for="User.HireDate" class="control-label"></label>*@
                                    @*<input asp-for="User.HireDate" class="form-control" type="hidden"/>*@
                                    @*<span asp-validation-for="User.HireDate" class="text-danger"></span>*@
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }else{
                <h4>Welcome Admin</h4>
            }            
        </div>        
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}